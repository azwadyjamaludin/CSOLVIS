{
  "name": "desktop_app",
  "productName": "CSOLVIS",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "dependencies": {
    "concurrently": "^6.0.2",
    "electron": "^12.0.6",
    "electron-is-dev": "^2.0.0",
    "@fontsource/roboto": "^4.2.3",
    "@material-ui/core": "^4.11.4",
    "@material-ui/icons": "^4.11.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "ace-builds": "^1.4.12",
    "bootstrap": "^4.6.0",
    "react": "^17.0.2",
    "react-ace": "^9.4.0",
    "react-bootstrap": "^1.6.0",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "recompose": "^0.30.0",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"BROWSER=none npm start\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=src/assets/CSOLVIS.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . --overwrite --platform=win32 --arch=ia32 --icon=src/assets/csolvis.ico --prune=true --out=release-builds --version-string.CompanyName=azwadyInc --version-string.FileDescription=csolvis",
    "package-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=src/assets/CSOLVIS.png --prune=true --out=release-builds"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron-packager": "^15.2.0",
    "wait-on": "^5.3.0"
  }
}
